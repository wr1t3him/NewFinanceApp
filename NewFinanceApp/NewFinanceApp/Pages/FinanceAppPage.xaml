<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewFinanceApp.Pages.FinanceAppPage">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="0,0,0,10" Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="btnHouseholds" Text="Households" BackgroundColor="AliceBlue" HorizontalOptions="Center" WidthRequest="185" BorderWidth="1" />
                <Button x:Name="btnAccounts" Text="Accounts" BackgroundColor="AntiqueWhite" HorizontalOptions="Center" WidthRequest="185" BorderWidth="1" />
                <Button x:Name="btnTransactions" Text="Transactions" BackgroundColor="AliceBlue"  HorizontalOptions="Center" WidthRequest="185" BorderWidth="1" />
                <Button x:Name="btnBudgets" Text="Budgets" BackgroundColor="AntiqueWhite"  HorizontalOptions="Center" WidthRequest="185" BorderWidth="1" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
    
    
    